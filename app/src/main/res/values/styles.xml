<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--
        <item name="colorAccent">@color/colorAccent</item>
        -->
    </style>

    <style name="btn_material_design">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:tint">@color/icon_color</item>
        <item name="android:drawableTint">@color/icon_color</item>
    </style>

    <style name="btn_help" parent="btn_material_design">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:contentDescription">@string/title_about</item>
        <item name="android:src">@drawable/ic_help_outline</item>
    </style>

    <style name="btn_calculator" parent="btn_material_design">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:contentDescription">@string/title_calculator</item>
        <item name="android:src">@drawable/ic_note_plus</item>
    </style>

    <style name="btn_drink" parent="btn_material_design">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:contentDescription">@string/menu_drink</item>
        <item name="android:text">@string/menu_drink</item>
        <item name="android:drawableStart">@drawable/ic_drink</item>
    </style>

    <style name="btn_drink_history" parent="btn_material_design">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:contentDescription">@string/menu_history</item>
        <item name="android:text">@string/menu_history</item>
        <item name="android:drawableStart">@drawable/ic_calendar</item>
    </style>

    <style name="btn_statistics" parent="btn_material_design">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:contentDescription">@string/menu_statistics</item>
        <item name="android:text">@string/menu_statistics</item>
        <item name="android:drawableStart">@drawable/ic_statistics</item>
    </style>

    <style name="btn_select_date" parent="btn_material_design">
        <item name="android:contentDescription">@string/history_select_day</item>
        <item name="android:src">@drawable/ic_calendar</item>
    </style>

    <style name="btn_today" parent="btn_material_design">
        <item name="android:contentDescription">@string/history_today</item>
        <item name="android:src">@drawable/ic_today</item>
    </style>

    <style name="btn_left" parent="btn_material_design">
        <item name="android:src">@drawable/ic_arrow_left</item>
    </style>
    <style name="btn_right" parent="btn_material_design">
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>
    <style name="btn_up" parent="btn_material_design">
        <item name="android:src">@drawable/ic_arrow_up</item>
    </style>
    <style name="btn_down" parent="btn_material_design">
        <item name="android:src">@drawable/ic_arrow_down</item>
    </style>

    <style name="btn_ok" parent="btn_material_design">
        <item name="android:text">@string/ok</item>
        <item name="android:drawableStart">@drawable/ic_check_mark</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="btn_clear" parent="btn_material_design">
        <item name="android:text">@string/calc_clear</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="view_development">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">0px</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="view_alcoholmeter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/alcoholmeter</item>
    </style>

    <style name="view_favourites_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:columnWidth">100dp</item>
    </style>

    <style name="simple_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="title_text" parent="simple_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="subtitle_text" parent="simple_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:background">@color/subtitle_bg_color</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
    </style>

    <style name="centered_text" parent="simple_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="spinner_text" parent="simple_text">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/spinner_text</item>
    </style>

    <style name="info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginBottom">7dip</item>
    </style>

    <style name="add_favourites_text" parent="simple_text">
        <item name="android:text">@string/prompt_add_favourite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="disclaimer_text" parent="simple_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="alcohol_level_text" parent="centered_text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="small_text" parent="simple_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="unit_text" parent="simple_text">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="table_text" parent="simple_text">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="table_text_tight" parent="simple_text">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="simple_text_right" parent="simple_text">
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="table_edit">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">170dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_small">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="table_edit_small" parent="table_edit">
        <item name="android:minWidth">120dip</item>
    </style>

    <style name="table_spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">170dip</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="table_widespinner" parent="table_spinner">
        <item name="android:minWidth">200dip</item>
    </style>

    <style name="table_time_picker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:minWidth">150dip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="table_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="button_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:height">45dp</item>
        <item name="android:width">45dp</item>
    </style>

    <style name="button_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linearlayout_vertical" parent="fill_parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal_wrap" parent="wrap_content">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal_fill" parent="fill_parent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal_fill_vwrap" parent="horizontal_fill">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontal_wrap_center" parent="horizontal_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="vertical_fill" parent="fill_parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical_wrap" parent="wrap_content">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical_wrap_hfill" parent="wrap_content">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="scrollview_vertical" parent="fill_parent">
        <item name="android:fillViewport">true</item>
    </style>

</resources>
